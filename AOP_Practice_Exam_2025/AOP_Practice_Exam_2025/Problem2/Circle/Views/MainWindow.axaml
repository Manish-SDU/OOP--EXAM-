<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Circle.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Circle.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Circle">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Spacing="10" Margin="10">
            <Slider Value="{Binding Diameter}" Width="200" 
                    Minimum="50" Maximum="500"/>
            <ComboBox Items="{Binding Colors}"
                      SelectedItem="{Binding Color}"/>
            <Button Command="{Binding ResetCommand}">Reset</Button>
        </StackPanel>
        
        <Canvas Background="LightGray">
            <Ellipse Width="{Binding Diameter}"
                     Height="{Binding Diameter}"
                     Fill="{Binding Color}"
                     Canvas.Left="150"
                     Canvas.Top="50"/>
        </Canvas>
    </DockPanel>
</Window>